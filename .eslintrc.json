{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": ["google"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "ignorePatterns": [
      "**/node_modules",
      "CODEOWNERS",
      "*.yml",
      "*.md",
      "package-lock.json"
    ],
    "overrides": [
      {
        "files": ["dist/*.js", "src/*.js", "demo/demo.js"],
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "plugins": [
        "eslint-plugin-html"
    ],
    "rules": {
      "require-jsdoc": "off",
      "max-len": "warn"
    }
  }
